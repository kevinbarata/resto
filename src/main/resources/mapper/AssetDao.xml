<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.resto.dao.AssetDao">

    <insert id="add" parameterType="com.project.resto.dto.AssetDto" useGeneratedKeys="true" keyProperty="id">
        insert into resto.asset
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="merk != null and merk != ''">merk,</if>
            <if test="qty != null and qty != ''">qty,</if>
            <if test="remark != null and remark!= ''">remark,</if>
            <if test="status != null and status!= ''">status,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="merk != null and merk != ''">#{merk},</if>
            <if test="qty != null and qty != ''">#{qty},</if>
            <if test="remark != null and remark !=''">#{remark},</if>
            <if test="status != null and status !=''">#{status},</if>
        </trim>
    </insert>

    <select id="get" resultType="com.project.resto.dto.AssetDto" parameterType="com.project.resto.dto.AssetDto">
        SELECT  id as id,
                'name' as name,
                merk as merk,
                qty as qty,
                remark as remark,
                status as status,
                create_time as createTime,
                update_time as updateTime
        FROM resto.asset
        <where>
            1=1
            <if test="id != null and id != '' ">
             and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and 'name' = #{name}
            </if>
            <if test="merk != null and merk != ''">
                and merk = #{merk}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
        order by id desc
    </select>

    <update id="update" parameterType="com.project.resto.dto.AssetDto">
        update resto.asset
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="merk != null and merk != ''">merk = #{merk},</if>
            <if test="qty != null and merk != ''">qty = #{qty},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            <if test="status != null and status != ''">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>
