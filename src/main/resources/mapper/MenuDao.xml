<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.resto.dao.MenuDao">

    <insert id="add" parameterType="com.project.resto.dto.AssetDto" useGeneratedKeys="true" keyProperty="id">
        insert into resto.menu
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="category != null and category != ''">category,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="price != null and price != ''">price,</if>
            <if test="remark != null and remark!= ''">remark,</if>
            <if test="status != null and status!= ''">status,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="category != null and category != ''">#{category},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="price != null and price != ''">#{price},</if>
            <if test="remark != null and remark !=''">#{remark},</if>
            <if test="status != null and status !=''">#{status},</if>
        </trim>
    </insert>

    <select id="get" resultType="com.project.resto.dto.MenuDto" parameterType="com.project.resto.dto.MenuDto">
        SELECT  id as id,
                category as category,
                'name' as name,
                price as price,
                remark as remark,
                status as status,
                create_time as createTime,
                update_time as updateTime
        FROM resto.menu
        <where>
            1=1
            <if test="id != null and id != '' ">
             and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and 'name' = #{name}
            </if>
            <if test="category != null and category != ''">
                and category = #{category}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
        order by id desc
    </select>

    <update id="update" parameterType="com.project.resto.dto.MenuDto">
        update resto.menu
        <set>
            <if test="category != null and category != ''">category = #{category},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="price != null and price != ''">price = #{price},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            <if test="status != null and status != ''">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="getCategory" resultType="com.project.resto.dto.MenuCategoryDto" parameterType="com.project.resto.dto.MenuCategoryDto">
        SELECT  id as id,
        'name' as name,
        remark as remark,
        status as status,
        create_time as createTime,
        update_time as updateTime
        FROM resto.menu_category
        <where>
            1=1
            <if test="id != null and id != '' ">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and 'name' = #{name}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
        order by id desc
    </select>

    <insert id="addCategory" parameterType="com.project.resto.dto.MenuCategoryDto" useGeneratedKeys="true" keyProperty="id">
        insert into resto.menu_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="remark != null and remark!= ''">remark,</if>
            <if test="status != null and status!= ''">status,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="remark != null and remark !=''">#{remark},</if>
            <if test="status != null and status !=''">#{status},</if>
        </trim>
    </insert>

    <update id="updateCategory" parameterType="com.project.resto.dto.MenuCategoryDto">
        update resto.menu_category
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            <if test="status != null and status != ''">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>
