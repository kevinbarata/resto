<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.resto.dao.SocialDao">

    <insert id="add" parameterType="com.project.resto.dto.SocialDto" useGeneratedKeys="true" keyProperty="id">
        insert into resto.social
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="platForm != null and platForm != ''">platForm,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="link != null and link != ''">link,</if>
            <if test="remark != null and remark!= ''">remark,</if>
            <if test="status != null and status!= ''">status,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="platForm != null and platForm != ''">#{platForm},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="link != null and link != ''">#{link},</if>
            <if test="remark != null and remark !=''">#{remark},</if>
            <if test="status != null and status !=''">#{status},</if>
        </trim>
    </insert>

    <select id="get" resultType="com.project.resto.dto.SocialDto" parameterType="com.project.resto.dto.SocialDto">
        SELECT  id as id,

        platForm as platForm,
        'name' as name,
        link as link,
        remark as remark,
        status as status,
        create_time as createTime,
        update_time as updateTime
        FROM resto.social
        <where>
            1=1
            <if test="id != null and id != '' ">
             and id = #{id}
            </if>
            <if test="platForm != null and platForm != ''">
                and platForm = #{platForm}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
        order by id desc
    </select>

    <update id="update" parameterType="com.project.resto.dto.SocialDto">
        update resto.social
        <set>
            <if test="platForm != null and platForm != ''">platForm = #{platForm},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="link != null and link != ''">link = #{link},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            <if test="status != null and status != ''">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>
