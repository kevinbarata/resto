<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.resto.dao.AdminSessionDao">

    <insert id="add" parameterType="com.project.resto.dto.AdminSessionDto" useGeneratedKeys="true" keyProperty="id">
        insert into resto.admin_session
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null and userId != ''">userId,</if>
            <if test="token != null and token != ''">token,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null and userId != ''">#{userId},</if>
            <if test="token != null and token != ''">#{token},</if>
        </trim>
    </insert>

    <select id="validateSession" resultType="com.project.resto.dto.AdminSessionDto" parameterType="com.project.resto.dto.AdminSessionDto">
        SELECT  id as id,
        userId as userId,
        token as token,
        create_time as createTime,
        update_time as updateTime
        FROM resto.admin_session
        <where>
            1=1
            <if test="userId != null and userId != ''">
                and userId = #{userId}
            </if>
            <if test="token != null and token != ''">
                and token = #{token}
            </if>

        </where>
        order by id desc
        limit 1
    </select>

    <delete id="killSession" parameterType="com.project.resto.dto.AdminSessionDto">
        DELETE FROM resto.admin_session WHERE userId = #{userId} and token = #{token}
    </delete>

</mapper>
